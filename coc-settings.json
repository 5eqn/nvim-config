{
  "semanticTokens.enable": true,
  "Lua.telemetry.enable": true,
  "Lua.diagnostics.globals": ["use"],
  "sumneko-lua.enableNvimLuaDev": true,
  "coc.preferences.formatOnSave": true,
  "coc.source.around.enable": false,
  "coc.source.buffer.enable": false,
  "python.formatting.provider": "black",
  "rust-analyzer.procMacro.enable": false,
  "rust-analyzer.diagnostics.enable": false,
  "java.jdt.ls.vmargs": "-noverify -Xmx6G -XX:+UseG1GC -XX:+UseStringDeduplication",
  "java.import.gradle.java.home": "/usr/lib/jvm/java-11-openjdk",
  "languageserver": {
    "idris": {
      "command": "idris2-lsp",
      "rootPatterns": ["*.ipkg"],
      "filetypes": ["idris2"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"],
      "settings": {
        "haskell": {
          "checkParents": "CheckOnSave",
          "checkProject": true,
          "maxCompletions": 40,
          "formattingProvider": "ormolu",
          "plugin": {
            "stan": { "globalOn": true }
          }
        }
      }
    }
  }
}
